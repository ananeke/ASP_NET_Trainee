
<h1>Create Car Workshop</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">

            @* Nazwa wrasztatu *@
            <div class="form-group mb-3">
                <label class="control-label" for="Name">Name</label>
                <input class="form-control" type="text" id="Name" name="Name">
            </div>

            @* Opis warsztatu *@
            <div class="form-group mb-3">
                <label class="control-label" for="Description">Description</label>
                <input class="form-control" type="text" id="Description" name="Description" />
            </div>

            @* O warsztacie *@
            <div class="form-group mb-3">
                <label class="control-label" for="Description">About</label>
                <input class="form-control" type="text" id="About" name="About" />
            </div>

            @* nr tel *@
            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">Phone Number</label>
                <input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" />
            </div>

            @* ulica *@
            <div class="form-group mb-3">
                <label class="control-label" for="Street">Street</label>
                <input class="form-control" type="text" id="Street" name="Street" />
            </div>

            @* miasto *@
            <div class="form-group mb-3">
                <label class="control-label" for="City">City</label>
                <input class="form-control" type="text" id="City" name="City" />
            </div>

            @* kod pocztowy *@
            <div class="form-group mb-3">
                <label class="control-label" for="PostalCode">Postal Code</label>
                <input class="form-control" type="text" id="PostalCode" name="PostalCode" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>